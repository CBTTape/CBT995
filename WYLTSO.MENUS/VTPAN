                  5       ,6       ,7       ,8       ,9       )
          RETURN (VTPAN00 ,VTPANE  ,VTPAN01 ,VTPAN02 ,VTPAN03 ,VTPAN04 ,
                  VTPAN05 ,VTPAN06 ,VTPAN07 ,VTPAN08 ,VTPAN09 );
